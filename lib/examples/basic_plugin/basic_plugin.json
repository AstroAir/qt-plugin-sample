{
    "name": "Basic Example Plugin",
    "description": "A basic plugin demonstrating the QtPlugin system capabilities",
    "version": "1.0.0",
    "author": "QtPlugin Development Team",
    "license": "MIT",
    "homepage": "https://github.com/example/qtplugin",
    "category": "Example",
    "tags": ["example", "demo", "basic", "tutorial"],
    "capabilities": [
        "Service",
        "Configuration", 
        "Logging"
    ],
    "priority": "Normal",
    "dependencies": [],
    "optional_dependencies": [],
    "min_host_version": "3.0.0",
    "max_host_version": null,
    "interfaces": [
        "qtplugin.IPlugin/3.0"
    ],
    "configuration_schema": {
        "type": "object",
        "properties": {
            "timer_interval": {
                "type": "integer",
                "minimum": 1000,
                "maximum": 60000,
                "default": 5000,
                "description": "Timer interval in milliseconds"
            },
            "logging_enabled": {
                "type": "boolean",
                "default": true,
                "description": "Enable or disable logging"
            },
            "custom_message": {
                "type": "string",
                "default": "Hello from BasicPlugin!",
                "description": "Custom message to display"
            }
        },
        "additionalProperties": false
    },
    "commands": [
        {
            "name": "status",
            "description": "Get plugin status information",
            "parameters": {},
            "returns": {
                "type": "object",
                "properties": {
                    "state": {"type": "string"},
                    "uptime": {"type": "integer"},
                    "message_count": {"type": "integer"},
                    "command_count": {"type": "integer"}
                }
            }
        },
        {
            "name": "echo",
            "description": "Echo back the provided message",
            "parameters": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "description": "Message to echo back"
                    }
                },
                "required": ["message"]
            },
            "returns": {
                "type": "object",
                "properties": {
                    "echoed_message": {"type": "string"},
                    "timestamp": {"type": "string"}
                }
            }
        },
        {
            "name": "config",
            "description": "Get or set plugin configuration",
            "parameters": {
                "type": "object",
                "properties": {
                    "action": {
                        "type": "string",
                        "enum": ["get", "set"],
                        "default": "get"
                    },
                    "config": {
                        "type": "object",
                        "description": "Configuration to set (only for 'set' action)"
                    }
                }
            },
            "returns": {
                "type": "object",
                "properties": {
                    "current_config": {"type": "object"},
                    "success": {"type": "boolean"}
                }
            }
        },
        {
            "name": "metrics",
            "description": "Get plugin performance metrics",
            "parameters": {},
            "returns": {
                "type": "object",
                "properties": {
                    "uptime_ms": {"type": "integer"},
                    "command_count": {"type": "integer"},
                    "message_count": {"type": "integer"},
                    "error_count": {"type": "integer"},
                    "memory_usage": {"type": "integer"},
                    "cpu_usage": {"type": "number"}
                }
            }
        },
        {
            "name": "test",
            "description": "Run plugin self-test",
            "parameters": {
                "type": "object",
                "properties": {
                    "test_type": {
                        "type": "string",
                        "enum": ["basic", "performance", "stress"],
                        "default": "basic"
                    }
                }
            },
            "returns": {
                "type": "object",
                "properties": {
                    "test_result": {"type": "string"},
                    "success": {"type": "boolean"},
                    "details": {"type": "object"}
                }
            }
        }
    ],
    "events": [
        {
            "name": "timer_tick",
            "description": "Emitted when the internal timer ticks",
            "data": {
                "type": "object",
                "properties": {
                    "tick_count": {"type": "integer"},
                    "timestamp": {"type": "string"}
                }
            }
        },
        {
            "name": "configuration_changed",
            "description": "Emitted when plugin configuration changes",
            "data": {
                "type": "object",
                "properties": {
                    "old_config": {"type": "object"},
                    "new_config": {"type": "object"}
                }
            }
        },
        {
            "name": "error_occurred",
            "description": "Emitted when an error occurs in the plugin",
            "data": {
                "type": "object",
                "properties": {
                    "error_code": {"type": "integer"},
                    "error_message": {"type": "string"},
                    "timestamp": {"type": "string"}
                }
            }
        }
    ],
    "resources": {
        "estimated_memory_usage": "< 1 MB",
        "estimated_cpu_usage": "< 1%",
        "disk_space_required": "< 100 KB",
        "network_usage": "None"
    },
    "platform_support": {
        "windows": true,
        "linux": true,
        "macos": true,
        "minimum_qt_version": "6.0.0"
    },
    "build_info": {
        "compiler_requirements": "C++20 compatible",
        "cmake_minimum_version": "3.21",
        "additional_dependencies": []
    },
    "documentation": {
        "readme": "README.md",
        "api_reference": "docs/api.md",
        "examples": "examples/",
        "changelog": "CHANGELOG.md"
    },
    "support": {
        "email": "support@example.com",
        "website": "https://github.com/example/qtplugin",
        "issues": "https://github.com/example/qtplugin/issues",
        "wiki": "https://github.com/example/qtplugin/wiki"
    }
}
